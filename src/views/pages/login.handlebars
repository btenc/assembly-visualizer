{{!-- user login page --}}
{{#> navbar }}{{/navbar}}
<h1>Log In to AsmVis</h1>
<ul class="error" id="errUl" hidden></ul>
  {{#if errors}}
  <ul class="error" id="errorUl">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
  {{#if signedUp}}
  <p class="signedUpNotif">Signed up successfully, please log in!</p>
  {{/if}}
<form action="/users/login" method="POST" id="login-form" class="login-form">
  <div class="form-group">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" placeholder="Enter your username" required>
  </div>

  <div class="form-group">
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" placeholder="Enter your password" required>
  </div>

  <button type="submit" class="btn btn-primary">Log In</button>
</form>

<div class="extra-links">
  <p>Don't have an account? <a href="/users/signup">Sign up here</a>.</p>
  <p><a href="/forgot-password">Forgot your password?</a></p>
</div>
