{{!-- snippet editor page --}}
<title>Snippet Editor</title>
{{#> navbar }}{{/navbar}}
<body>
  <ul class="error" id="errUl" hidden></ul>
  {{#if errors}}
  <ul class="error" id="errorUl">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
  <p id="username" hidden>{{username}}</p>
  <p id="snipName" hidden>{{snipName}}</p>
  <p id="snipName" hidden>{{snipBody}}</p>
<div class="snipDiv">
  <!--Form should be populated with snippet name and code-->
  <form id="snippetEditor" action='/snippets/:snippetId' method="POST">
    <input size="50" type="text" id="snippetName" name="snippetName" placeholder="Snippet Name" required>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <button type="submit" class="btn btn-primary">Run Code</button> 
    <p>Created on {{dateCreated}}, Last edited on {{dateLastEdited}}</p>
    <textarea class="snippetBody" id="snippetBody" name="snippetBody" placeholder="Snippet Body" required></textarea>
  </form>
  Errors:
  <div id="error_output" class="errDiv">Hey How's it going{{asmErrors}}</div>
  Output:
  <div id="asm_output" class="errDiv">Oh what's up{{asmOutput}}</div>
</div>
</body>