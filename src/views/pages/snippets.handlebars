{{!-- snippet editor page --}}
<title>Snippet Editor</title>
{{#> navbar }}{{/navbar}}
<body>
  <ul class="error" id="errUl" hidden></ul>
  {{#if errors}}
  <ul class="error" id="errorUl">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
  <p id="username" hidden>{{sessionUsername}}</p>
  <p id="snipName" hidden>{{snipName}}</p>
  <p id="snipBody" hidden>{{snipBody}}</p>
<div class="snipDiv">
  <!--Form should be populated with snippet name and code-->
  <ul id="errorUl"></ul>
  <form id="snippetEditor" action='/snippets' method="POST">
    <input size="50" type="text" id="snippetName" name="snippetName" placeholder="Snippet Name">
    {{#if owner}}
    <button id="saveButton" type="submit" class="btn btn-primary">Save Changes</button>
    {{/if}}
    {{#if ownerUsername}}
    <p>Created by {{ownerUsername}} on {{dateCreated}}, Last edited on {{dateLastEdited}}</p>
    {{/if}}
    <textarea class="snippetBody" id="snippetBody" name="snippetBody" placeholder="Snippet Body"></textarea>
  </form>
  <button id="runStepButton" type="submit" class="btn btn-primary">Interpret Step</button> 
  <button id="runAllButton" type="submit" class="btn btn-primary">Interpret All</button> 
  <button id="resetLine" type="submit" class="btn btn-primary">Reset</button>
  <div class="consoles">
    <div id="error_output" class="consoleDiv">Errors: {{asmErrors}}</div>
    <div id="asm_output" class="consoleDiv">ASM output: {{asmOutput}}</div>
  </div>

</body>