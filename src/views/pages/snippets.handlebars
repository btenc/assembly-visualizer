{{!-- snippet editor page --}}
{{#> navbar }}{{/navbar}}
<body>
  <ul class="error" id="errUl" hidden></ul>
  {{#if errors}}
  <ul class="error" id="errorUl">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
  <p id="username" hidden>{{username}}</p>
  <p id="snipName" hidden>{{snipName}}</p>
  <p id="dateCreated" hidden>{{dateCreated}}</p>
  <p id="dateLastEdit" hidden>{{dateLastEdit}}</p>

  <!--Form should be populated with snippet name and code-->
  <form id="snippetEditor" action='/snippets/:snippetId' method="POST">
  <input size="50" type="text" id="snippetName" name="snippetName" placeholder="Snippet Name" required>
  <button type="submit" class="btn btn-primary">Save Changes</button>
  <p>Created on {{dateCreated}}, Last edited on {{dateLastEdit}}</p>
  <input type="text" id="snippetBody" name="snippetBody" placeholder="Snippet Body" required>
  </form>
</body>