{{!-- User dashboard after login page, listing snippets or making new ones --}}
{{#> navbar }}{{/navbar}}
<section class="profile">
  <h1><a href="/">{{owner}}</a>'s Profile</h1>
  <p>Member since {{dateRegistered}}</p>
  <h2>Snippets:</h2>
  {{#if snippets}}
  <div id="snippet-list">
    {{#if isOwner}}
      {{#each snippets}}
      <article class="snipList">
        <h2><a href="/snippets/{{'_id'}}">{{'snipName'}}</a></h2>
        <p>Date Last Edited: {{'dateLastEdit'}} <br> Date Created: {{'dateCreation'}}</p>
        <!--Pass in a check with person accessing page and who's profile this is-->
        <form action="/snippets/{{_id}}" id="delete-button" class="delete-button">
        <button  class="btn" type="submit">Delete Snippet</button>
        </form>
      </article>
      {{/each}}
    {{else}}
      {{#each snippets}}
      <article class="snipList">
        <h2><a href="/snippets/{{'_id'}}">{{'snipName'}}</a></h2>
        <p>Date Last Edited: {{'dateLastEdit'}} <br> Date Created: {{'dateCreation'}}</p>
      </article>
      {{/each}}
    {{/if}}
  </div>
  {{else}}
  <p>This user hasn't made any snippets yet!</p>
  {{/if}}
</section>